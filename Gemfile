source "https://rubygems.org"

# Sass, Compass and extensions.
gem 'sass'
gem 'sass-globbing'           # Allows you to import files in a single import statement.
gem 'compass'
gem 'listen'        # Workaround for sass --watch or compass watch
gem 'susy', '2.1.3'           # Grid Framework
gem 'breakpoint'              # Helper for grid
gem 'bourbon-compass'         # Components
gem 'rb-inotify'
gem 'celluloid'